<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_vertical_rolling_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerInParent="true"
    android:background="#666666">

    <LinearLayout
        android:id="@+id/ll_message"
        android:layout_width="994px"
        android:layout_height="150px"
        android:layout_marginLeft="50px"
        android:layout_marginRight="50px"
        android:layout_marginTop="400px"
        android:background="@android:color/white"
        android:gravity="center_vertical">

        <LinearLayout
            android:layout_width="200px"
            android:layout_height="150px"
            android:background="#ffb847"
            android:gravity="center">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#ffb847"
                android:src="@drawable/iv_message_top" />
        </LinearLayout>

        <com.haier.verticalrollingview.verticalrollingview.VerticalRollingTextView
            android:id="@+id/vertical_rolling_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="38px"
            android:duration="1000"
            android:textColor="#757575"
            android:textSize="80px"
            app:animInterval="3000" />
    </LinearLayout>

</RelativeLayout>
